<p id="notice"><%= notice %></p>
<p>
  <b><%= @post.title %></b>
</p>

<p>
  <%= @post.content.html_safe %>
</p>

<p>
  <b>Tags:</b>
  <%= join_tags(@post)%>
</p>
<% if user_signed_in?%>
<%= link_to 'Edit Post', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back to Posts', posts_path %><br />
<h4>Comments</h4>
<%= render @post.comments %>

<h4>Add a comment:</h4>
<%= render "comments/form" %>



