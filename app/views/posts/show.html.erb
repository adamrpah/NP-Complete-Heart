<p id="notice"><%= notice %></p>
<p>
  <b><%= @post.title %></b>
</p>

<p>
  <%= @post.content.html_safe %>
</p>

<p>
  <b>Tags:</b>
  <%= join_tags(@post)%>
</p>

<h3>Comments</h3>
<%= render @post.comments %>

<h4>Add a comment:</h4>
<%= render "comments/form" %>

<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back to Posts', posts_path %>
