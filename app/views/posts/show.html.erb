<p id="notice"><%= notice %></p>
<p>
  <h3><%= @post.title %></h3>
</p>

<p>
  <%= @post.content.html_safe %>
</p>

<p>
  <b>Tags:</b>
  <%= join_tags(@post)%>
</p>
<% if user_signed_in?%>
<%= link_to 'Edit Post', edit_post_path(@post) %>
<% end %>

<%= image_tag("articlefooter.png", :alt => "article_footer") %>

<% if @post.comments %>
  <h3>Comments</h3>
  <%= render @post.comments %>
<% else %>
  <h4>No Comments, be the first!</h4>
<% end %>
<h4>Add a comment:</h4>
<%= render "comments/form" %>



