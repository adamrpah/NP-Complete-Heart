<p id="notice"><%= notice %></p>
<p>
  <h3><%= @post.title %></h3>
</p>

<p>
  <%= @post.content.html_safe %>
</p>

<p>
  <b>Tags:</b>
  <%= join_tags(@post)%>
</p>
<% if user_signed_in?%>
  <%= link_to 'Edit Post', edit_post_path(@post) %>
<% end %>

<%= image_tag("articlefooter.png", :alt => "article_footer") %>

<% if @post.comments %>
  <%= render @post.comments %>
<% else %>
  <h4>No Comments, be the first!</h4>
<% end %>

<a class="button" href="#" id="show" onclick="showcomment();return false;">Add Comment</a>
<div id="hidden" style="display:none">
	<br /><br />
	<%= render "comments/form" %>
</div>

